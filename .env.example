# ──────────────────────────────────────────────────────────────────────────────
# Poker Planning — backend environment variables
# Copy this file to .env and fill in the values.
# ──────────────────────────────────────────────────────────────────────────────

# PostgreSQL
DB_URL=jdbc:postgresql://localhost:5432/pokerplanning
DB_USER=postgres
DB_PASS=postgres

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# JWT secret for user accounts (min 32 chars, keep secret!)
JWT_SECRET=changeme-jwt-secret-at-least-32-chars-long!!

# Guest token secret (signed token proving guest identity/role, keep secret!)
GUEST_TOKEN_SECRET=changeme-guest-token-secret-32-chars!!

# CORS — comma-separated list of allowed frontend origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# WebSocket allowed origins (same as CORS in most cases)
WS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
